<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home / Twitter</title>
    <link
      rel="shortcut icon"
      href="assets/twitter-icon.ico"
      type="image/x-icon"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/twitter.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="assets/twitter.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="assets/twitter.png"
    />
    <link rel="stylesheet" href="css/main.css" />
    <script defer src="main.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <div class="sidebar-container">
          <div class="nav-logo">
            <span>
              <i class="fa-brands fa-twitter"></i>
            </span>
          </div>
          <div class="nav-links">
            <ul>
              <li class="active-link">
                <a href="/home">
                  <i class="fa-solid fa-house"></i>
                  <span>Home</span>
                </a>
              </li>
              <li>
                <a href="#">
                  <i class="fa-solid fa-hashtag"></i>
                  <span>Explore</span>
                </a>
              </li>
              <li>
                <a href="/profile">
                  <i class="fa-solid fa-user"></i>
                  <span>Profile</span>
                </a>
              </li>
              <li>
                <a href="/auth/logout">
                  <i class="fa-solid fa-power-off"></i>
                  <span>Log out</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="main">
        <%- include(page) -%> 
        <div class="right-side-container">
          <div class="card">
            <div class="card-header">
              <span>What's happening</span>
            </div>
            <div class="trending-tweets">
              <% trendingTweets.forEach(tweet => { %>
              <div class="tweet-content">
                <div class="tweet-header">
                  <span class="tweet-name">
                    <a href="/profile/<%= tweet.userId %>">
                      <span> <%= tweet.name %> </span>
                    </a>
                  </span>
                  <span class="tweet-handle">
                    <a href="/profile/<%= tweet.userId %>">
                      <span> @<%= tweet.username %> </span>
                    </a>
                  </span>
                  <span class="tweet-time"> <%= tweet.tweetTime %> </span>
                </div>
                <div class="tweet-body">
                  <div class="tweet-text">
                    <span> <%= tweet.tweet %> </span>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      defer
      src="https://kit.fontawesome.com/95f68113d2.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>